<controls:MetroWindow x:Class="ORBIT.ComLink.Client.UI.ClientWindow.ClientList.ClientListWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:p="clr-namespace:ORBIT.ComLink.Client.Properties"
                      Title="{x:Static p:Resources.ClientWindowTitle}"
                      Width="400"
                      Height="500"
                      ResizeMode="NoResize">
    <ListBox Name="ClientList" HorizontalContentAlignment="Stretch" Padding="5">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Grid Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" HorizontalAlignment="Left"     
                               VerticalAlignment="Center"  Text="{Binding Name}" />
                    <TextBlock Grid.Column="1" HorizontalAlignment="Center"     
                               VerticalAlignment="Center" Text="{Binding AllowRecordingStatus}" />
                    <Ellipse Width="12"
                             Grid.Column="2"
                             Height="12"
                             Margin="2"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Fill="{Binding ClientCoalitionColour}"
                             Stroke="Black" />
                    <TextBlock Grid.Column="3"  
                               Padding="5,0,5,0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" Text="{Binding IsMuted}" />
                    <Button Grid.Column="4"
                                  Command="{Binding ToggleMute}"
                                  Content="Toggle Mute"
                                  ></Button>
                </Grid>
            </DataTemplate>
        </ListBox.ItemTemplate>

    </ListBox>

</controls:MetroWindow>